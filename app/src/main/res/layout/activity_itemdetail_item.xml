<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_thum"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/banner_image1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/text_productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[봄에 찰떡 컬러감] 클린 슬림핏 데님"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_productname"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="29,800원"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_price"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_round4_blue30_bg_white"
                    android:text="4,000원 할인 쿠폰 받기"
                    android:textColor="@color/blue30" />

                <TextView
                    android:id="@+id/text_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button_coupon"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="상품코드 160-20460-117" />
            </RelativeLayout>

            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray30" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/textView58"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textView55"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="100dp"
                    android:text="평균 1일"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textView54"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="100dp"
                    android:text="무료"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textView53"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="100dp"
                    android:text="에이블리 직접배송"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView54"
                    android:layout_marginTop="15dp"
                    android:text="상품 준비기간"
                    android:textColor="@color/black_50" />

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView53"
                    android:layout_marginTop="15dp"
                    android:text="배송비"
                    android:textColor="@color/black_50" />

                <TextView
                    android:id="@+id/textView53"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView46"
                    android:layout_marginTop="20dp"
                    android:text="배송정보"
                    android:textColor="@color/black_50" />

                <LinearLayout
                    android:id="@+id/LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="리뷰 0개"
                        android:textColor="@color/black" />

                    <View
                        android:id="@+id/view18"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray30"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView49"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="4,534개 구매중"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LinearLayout"
                    android:layout_marginTop="10dp"
                    android:text="리뷰를 작성한 사람 중 100%가 만족한 상품이에요"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/linear1_textView59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="1일"
                    android:textColor="@color/pink20" />

                <ProgressBar
                    android:id="@+id/linear1_pbCapacity1"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@id/textView38"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="97"
                    android:progressDrawable="@drawable/progress"
                    android:secondaryProgress="97" />

                <TextView
                    android:id="@+id/linear_textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="97%"
                    android:textColor="@color/pink20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/linear2_textView59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:text="2일" />

                <ProgressBar
                    android:id="@+id/linear2_pbCapacity2"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@id/textView38"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="0.95"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_gray"
                    android:secondaryProgress="5" />

                <TextView
                    android:id="@+id/linear2_textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3%" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/linear3_textView59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:text="3일" />

                <ProgressBar
                    android:id="@+id/linear3_pbCapacity3"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@id/textView38"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="0.95"
                    android:max="100"
                    android:progressDrawable="@drawable/progress"
                    android:secondaryProgress="0" />

                <TextView
                    android:id="@+id/linear3_textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0%" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4일+" />

                <ProgressBar
                    android:id="@+id/pbCapacity2"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@id/textView38"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="0.95"
                    android:max="100"
                    android:progressDrawable="@drawable/progress"
                    android:secondaryProgress="0" />

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0%" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView61"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="최근 1개월 주문들의 상품준비 기간(주말,공휴일 제외)"
                android:textSize="12sp" />

            <View
                android:id="@+id/view19"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:gravity="center_horizontal"
                    android:text="상품정보"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/view20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray30" />

            <ImageView
                android:id="@+id/image_normal1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/banner_image1" />

            <ImageView
                android:id="@+id/image_normal2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/banner_image1" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
