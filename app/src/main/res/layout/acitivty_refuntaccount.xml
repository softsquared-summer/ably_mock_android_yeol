<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_contect_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    app:srcCompat="@drawable/icon_backbutton" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/noto_sans_bold"
                    android:gravity="center_vertical"
                    android:text="환불 계좌"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view16"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/tablayout_jjim"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/drop_shadow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/option_spiner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/textView45"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/spinner_background"
                        android:overlapAnchor="false"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView43"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="진행됩니다."
                        android:textColor="@color/black_50"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView32"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="승인취소가 불가능한 결제 건은 계좌 환불이 진행됩니다."
                        android:textColor="@color/black_50"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="환불 가능한 계좌를 정확히 입력해주세요."
                        android:textColor="@color/black_50"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/editText6"
                        style="@style/EditTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/option_spiner"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="예금주" />

                    <EditText
                        android:id="@+id/editText7"
                        style="@style/EditTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText6"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="계좌번호" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_layout"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_round_pink20_all"
                android:fontFamily="@font/noto_sans_bold"
                android:text="환불계좌 변경완료"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>