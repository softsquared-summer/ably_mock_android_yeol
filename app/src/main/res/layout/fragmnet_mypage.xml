<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/noto_sans_bold"
                    android:gravity="center_vertical"
                    android:text="마이페이지"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"
                    app:srcCompat="@drawable/icon_bar_search" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_bar_cart" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/drop_shadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mypage_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_round_white_corner15"
                    android:elevation="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp">

                    <ImageView
                        android:id="@+id/mypage_information"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        app:srcCompat="@drawable/icon_mypage_banner" />

                    <TextView
                        android:id="@+id/navheader_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:text="에이블리 회원이라면"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/navheader_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/navheader_text"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/noto_sans_bold"
                        android:text="누구나 무료배송!"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/navheader_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/navheader_text2"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/noto_sans_bold"
                        android:text="더 큰 혜택 보기 >"
                        android:textColor="@color/blue30"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/navheader_text3"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:paddingTop="15dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="30dp"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/sign_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:background="@drawable/border_round_gray10_bg_white_coner4"
                            android:text="로그인"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:stateListAnimator="@null"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_1"
                            android:layout_width="55dp"
                            android:layout_height="46dp"
                            android:layout_weight="0.1" />

                        <Button
                            android:id="@+id/sign_quickButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:background="@drawable/border_round_gray10_bg_white_coner4"
                            android:text="5초 회원가입"
                            android:stateListAnimator="@null"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mypage_3button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypage_info"
                android:background="@color/gray10">

                <LinearLayout
                    android:id="@+id/button_quick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@color/white"
                        android:paddingTop="18sp"
                        app:srcCompat="@drawable/icon_check_order" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="25dp"
                        android:text="주문/배송"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@color/white"
                        android:paddingTop="18sp"
                        app:srcCompat="@drawable/icon_point" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="25dp"
                        android:text="포인트"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@color/white"
                        android:paddingTop="18sp"
                        app:srcCompat="@drawable/icon_coupon" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="25dp"
                        android:text="쿠폰"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/mypage_3button"
                android:background="@color/gray10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/view5"
                android:background="@color/gray10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/Style.TextView.Setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:text="공지사항"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/Style.TextView.Setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:text="고객센터"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/Style.TextView.Setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:text="서비스 이용약관"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/Style.TextView.Setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:text="개인정보 수집 및 이용"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/Style.TextView.Setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="19dp"
                        android:paddingBottom="19dp"
                        android:text="버전 정보"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView35"
                        style="@style/Style.TextView.Setting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="4dp"
                        android:paddingTop="19dp"
                        android:paddingBottom="19dp"
                        android:text="2.17.1"
                        android:textColor="@color/black_40"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView9"
                        style="@style/Style.TextView.Setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="19dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="19dp"
                        android:text="최신버전입니다."
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
